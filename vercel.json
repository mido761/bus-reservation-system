{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "server/api/(.*)",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/api/$1" },
    { "src": "/(.*)", "dest": "/client/index.html" }
  ],

  "rewrites": [{ "source": "/(.*)", "destination": "/" }]
}
